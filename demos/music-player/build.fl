import bob

deps = [
	Dep.local("../../kos"),
	Dep.local("../../lib"),
	Dep.local("../../vdev/audio"),
]

let src = ["main.c"]

let obj = Cc([
	"-std=c11", "-g",
	"-I/usr/local/include",
	"-Wall", "-Wextra", "-Werror",
]).compile(src)

let cmd = Linker([
	"-L/usr/local/lib",
	"-lumber", "-lvdriver_loader",
	"-laqua", "-laqua_root", "-laqua_audio",
	"-lmpg123",
]).link(obj)

install = {
	cmd: "bin/music-player",
}

run = ["music-player"]
