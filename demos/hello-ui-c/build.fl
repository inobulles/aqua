import bob

deps = [
	Dep.local("../.."),
]

let src = ["main.c"]

let obj = Cc([
	"-std=c11", "-g",
	"-Wall", "-Wextra", "-Werror",
]).compile(src)

let cmd = Linker([
	"-L/usr/local/lib",
	"-laqua", "-laqua_root", "-laqua_win", "-laqua_wgpu", "-laqua_ui", "-lumber",
]).link(obj)

install = {
	cmd: "bin/aqua-hello-ui-c",
}

run = ["aqua-hello-ui-c"]
