import bob

deps = [
	Dep.local("../.."),
]

# TODO Put this all in a 'src' directory.

let src = ["main.c"]

let obj = Cc([
	"-std=c11", "-g",
	"-Wall", "-Wextra", "-Werror",
]).compile(src)

let cmd = Linker(["-L/usr/local/lib", "-laqua", "-laqua_aqua", "-laqua_win", "-laqua_wgpu"]).link(obj)

install = {
	cmd: "bin/aqua-webgpu-triangle",
}

run = ["aqua-webgpu-triangle"]
