import bob

deps = [
	Dep.local("../kos"),
]

let src = Fs.list(".").where(|path| path.endswith(".c"))

let obj = Cc([
	"-std=c11", "-g",
	"-Wall", "-Wextra", "-Werror",
	"-fPIC",
]).compile(src)

let gvd = Linker(["-lpthread"]).link(obj)

install = {
	gvd: "bin/gvd",
}

run = ["gvd"]
