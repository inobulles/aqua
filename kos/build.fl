import bob

let src = Fs.list(".").where(|path| path.endswith(".c"))

let obj = Cc([
	"-std=c11", "-g",
	"-Wall", "-Wextra", "-Werror",
	"-fPIC",
]).compile(src)

# TODO 'aqua' command ofc.

let lib = Linker(["-L/usr/local/lib", "-shared"]).link(obj)

install = {
	lib: "lib/libaqua.so",
	"kos.h": "include/aqua/kos.h",
}

run = none
