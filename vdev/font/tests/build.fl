import bob

deps = [
	Dep.local(".."),
	Dep.local("../../../lib"),
]

let src = ["main.c"]

let obj = Cc([
	"-std=c11", "-g",
	"-Wall", "-Wextra", "-Werror",
]).compile(src)

let cmd = Linker([
	"-L/usr/local/lib",
	"-lumber", "-lvdriver_loader",
	"-laqua", "-laqua_root", "-laqua_font",
]).link(obj)

install = {
	cmd: "bin/aqua-vdev-font-tests",
}

run = ["aqua-vdev-font-tests"]
