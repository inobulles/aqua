import bob

deps = [
	Dep.git("https://github.com/inobulles/umber", "v0.3.1"),
	Dep.local("../../kos"),
]

let src = ["main.c"]

let obj = Cc([
	"-std=c11",
	"-Wall", "-Wextra", "-Werror",
]).compile(src)

let vdriver = Linker([
	"-shared",
	"-lumber", "-lvdriver", "-lpango",
]).link(obj)

install = {
	vdriver: "lib/vdriver/aquabsd.black.font.vdriver",
}

run = none
