import bob
import bob.cargo

deps = [
	Dep.local("../../kos"),
]

let target = Cargo.build()
let lib_path = target + "libaudio.so"

if Platform.os() == "Darwin" {
	lib_path = target + "libaudio.dylib"
}

install = {
	lib_path: "lib/vdriver/aquabsd.black.audio.vdriver",
}

run = none
